<% if @user.first_name.present? || @user.last_name.present? %>
    <p><strong>Name:</strong> <%= [@user.first_name, @user.last_name].compact.join(' ') %></p>
  <% end %>
  
  <p><strong>Email:</strong> <%= @user.email %></p>
  
  <% if @user.bio.present? %>
    <p><strong>Bio:</strong> <%= @user.bio %></p>
  <% end %>

<% if current_user == @user %>
  <p><%= link_to "Edit Profile", edit_user_registration_path %></p>
<% elsif current_user && @user != current_user %>
  <p>
    <%= button_to message_user_path(@user.username), method: :post, class: "message-btn" do %>
      <i class="fa-solid fa-message"></i> Message
    <% end %>
  </p>
<% end %>

<p><%= link_to "Back to Home", root_path %></p>